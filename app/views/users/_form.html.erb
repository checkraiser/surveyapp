<div class="row">
    <div class="col-md-3 col-md-offset-5">
<h1>Sign up</h1>
<%= form_tag(signup_path, :method=>'post') do %>
	<% if @user and  @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
	<p>
	<%= label_tag :full_name, 'Full name' %><br>
	<%= text_field_tag 'user[full_name]', nil, :class => 'form-control' %>
	</p>
	</div>
	<div class="form-group">
	<p>
	<%= label_tag :email %><br>
	<%= text_field_tag 'user[email]', nil, :class => 'form-control' %>
	</p>
	</div>
	<div class="form-group">
	<p>
	<%= label_tag :password %><br>
	<%= password_field_tag 'user[password]', nil, :class => 'form-control' %>
	</p>
	</div>
	<%= submit_tag "Sign up", :class => 'btn btn-primary' %>
<% end %>
</div>